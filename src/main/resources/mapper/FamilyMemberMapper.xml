<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chii.homemanagement.mapper.FamilyMemberMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.chii.homemanagement.entity.FamilyMember">
        <id column="id" property="id" />
        <result column="family_id" property="familyId" />
        <result column="user_id" property="userId" />
        <result column="role" property="role" />
        <result column="join_time" property="joinTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, family_id, user_id, role, join_time
    </sql>
    
    <!-- 根据家庭ID查询成员 -->
    <select id="findByFamilyId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM family_member
        WHERE family_id = #{familyId}
    </select>
    
    <!-- 根据用户ID查询成员 -->
    <select id="findByUserId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM family_member
        WHERE user_id = #{userId}
    </select>
    
</mapper> 