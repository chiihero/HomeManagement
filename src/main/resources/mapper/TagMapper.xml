<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chii.homemanagement.mapper.TagMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.chii.homemanagement.entity.Tag">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="color" property="color" />
        <result column="owner_id" property="ownerId" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, name, color, owner_id, create_user_id, create_time, update_time
    </sql>
    
    <!-- 根据家庭ID查询标签 -->
    <select id="getTagsByOwnerId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM tag
        WHERE owner_id = #{ownerId}
        ORDER BY id
    </select>
    
    <!-- 根据物品ID查询标签 -->
    <select id="getTagsByItemId" resultMap="BaseResultMap">
        SELECT t.id, t.name, t.color, t.owner_id, t.create_user_id, t.create_time, t.update_time
        FROM tag t
        INNER JOIN item_tag it ON t.id = it.tag_id
        WHERE it.item_id = #{itemId}
    </select>
    
</mapper> 