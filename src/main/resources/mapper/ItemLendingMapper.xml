<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chii.homemanagement.mapper.ItemLendingMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.chii.homemanagement.entity.ItemLending">
        <id column="id" property="id"/>
        <result column="item_id" property="itemId"/>
        <result column="borrower_name" property="borrowerName"/>
        <result column="borrower_contact" property="borrowerContact"/>
        <result column="lend_date" property="lendDate"/>
        <result column="expected_return_date" property="expectedReturnDate"/>
        <result column="actual_return_date" property="actualReturnDate"/>
        <result column="status" property="status"/>
        <result column="remark" property="remark"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    
    <!-- 查询指定物品的借用记录 -->
    <select id="findByItemId" resultMap="BaseResultMap">
        SELECT * FROM item_lending 
        WHERE item_id = #{itemId}
        ORDER BY lend_date DESC, id DESC
    </select>
    
    <!-- 查询指定状态的借用记录 -->
    <select id="findByStatus" resultMap="BaseResultMap">
        SELECT * FROM item_lending 
        WHERE status = #{status}
        ORDER BY expected_return_date ASC, id DESC
    </select>
    
    <!-- 查询未归还记录 -->
    <select id="findUnreturnedItems" resultMap="BaseResultMap">
        SELECT * FROM item_lending 
        WHERE status = 'lending' OR status = 'overdue'
        ORDER BY expected_return_date ASC, id DESC
    </select>
    
    <!-- 更新借用记录状态 -->
    <update id="updateStatus">
        UPDATE item_lending 
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>
    
</mapper> 