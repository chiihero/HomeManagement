<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chii.homemanagement.mapper.CategoryMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.chii.homemanagement.entity.Category">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parent_id" property="parentId" />
        <result column="path" property="path" />
        <result column="level" property="level" />
        <result column="sort" property="sort" />

        <result column="family_id" property="familyId" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, name, parent_id,level, path,sort, family_id, create_user_id, create_time, update_time
    </sql>
    
    <!-- 根据家庭ID查询所有分类 -->
    <select id="getCategoriesByFamilyId" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM category
        WHERE family_id = #{familyId}
        ORDER BY parent_id, id
    </select>
    
    <!-- 根据父分类ID查询子分类 -->
    <select id="getChildCategories" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM category
        WHERE parent_id = #{parentId} AND family_id = #{familyId}
        ORDER BY id
    </select>
    
    <!-- 查询根分类 -->
    <select id="getRootCategories" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM category
        WHERE parent_id IS NULL AND family_id = #{familyId}
        ORDER BY id
    </select>
    
    <!-- 新增分类时更新path字段 -->
    <update id="updatePath">
        UPDATE category
        <set>
            <if test="parentPath != null and parentPath != ''">
                path = CONCAT(#{parentPath}, ',', id)
            </if>
            <if test="parentPath == null or parentPath == ''">
                path = CAST(id AS CHAR)
            </if>
        </set>
        WHERE id = #{categoryId}
    </update>
    
    <!-- 根据ID列表批量查询分类 -->
    <select id="getCategoriesByIds" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM category
        WHERE id IN
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND family_id = #{familyId}
    </select>
    
    <!-- 查询指定分类及其所有子分类的ID -->
    <select id="getCategoryAndChildrenIds" resultType="java.lang.Long">
        SELECT id
        FROM category
        WHERE (id = #{categoryId} OR path LIKE CONCAT('%,', #{categoryId}, ',%') OR path LIKE CONCAT('%,', #{categoryId}) OR path LIKE CONCAT(#{categoryId}, ',%'))
        AND family_id = #{familyId}
    </select>
    
</mapper> 