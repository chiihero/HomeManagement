<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chii.homemanagement.mapper.ItemMapper">
    
    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.chii.homemanagement.entity.Item">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="specification" property="specification" />
        <result column="quantity" property="quantity" />
        <result column="price" property="price" />
        <result column="purchase_date" property="purchaseDate" />
        <result column="warranty_period" property="warrantyPeriod" />
        <result column="warranty_end_date" property="warrantyEndDate" />
        <result column="usage_frequency" property="usageFrequency" />
        <result column="usage_years" property="usageYears" />
        <result column="user_id" property="userId" />
        <result column="category_id" property="categoryId" />
        <result column="space_id" property="spaceId" />
        <result column="status" property="status" />
        <result column="remark" property="remark" />
        <result column="family_id" property="familyId" />
        <result column="create_user_id" property="createUserId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <!-- 带关联数据的结果映射 -->
    <resultMap id="DetailResultMap" type="com.chii.homemanagement.entity.Item" extends="BaseResultMap">
        <association property="userName" column="user_id" select="getUserName" />
        <association property="categoryName" column="category_id" select="getCategoryName" />
        <association property="spaceName" column="space_id" select="getSpaceName" />
        <collection property="images" column="id" select="getItemImages" />
    </resultMap>
    
    <!-- 基础字段列表 -->
    <sql id="Base_Column_List">
        id, name, code, specification, quantity, price, purchase_date, warranty_period, 
        warranty_end_date, usage_frequency, usage_years, user_id, category_id, space_id, 
        status, remark, family_id, create_user_id, create_time, update_time
    </sql>
    

</mapper> 